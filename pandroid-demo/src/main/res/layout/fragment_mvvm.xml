<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="productViewModel"
            type="com.leroymerlin.pandroid.demo.main.mvvm.ProductViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toggle Visibilty"
            app:visibility="@{productViewModel.nameVisible}" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:binding="@{productViewModel.name}"
            app:error="@{productViewModel.nameError}" />

        <Button
            android:id="@+id/onClickSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{productViewModel::onSubmit}"
            android:text="@string/submit" />
    </LinearLayout>
</layout>