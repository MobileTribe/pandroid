<?xml version="1.0" encoding="utf-8"?>

<com.leroymerlin.pandroid.ui.animation.view.MaterialTransitionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/material_mtl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:revealLayout="@+id/material_content">

    <FrameLayout
        android:id="@id/material_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pandroid_gray">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/material_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@color/pandroid_red"
                android:padding="@dimen/large_spacing"
                android:text="@string/navigation_animation"
                android:textColor="@color/pandroid_green"
                android:textSize="@dimen/large_text" />

            <ImageView
                android:id="@+id/material_iv"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:src="@drawable/pandroid_ic_launcher" />

        </RelativeLayout>
    </FrameLayout>
</com.leroymerlin.pandroid.ui.animation.view.MaterialTransitionLayout>